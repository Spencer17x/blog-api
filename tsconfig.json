{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/@types",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "koa-parameter": [
        "./typings/koa-parameter"
      ]
    },
    "lib": [
      "ES2015",
      "ES2018"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "./typings"
  ]
}
